<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlDam_YounesSlamani.Hallo"
             Title="Hallo">
    <VerticalStackLayout>
        <StackLayout>
            <Label Text="Hello...!" FontSize="24" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
            <Entry x:Name="passwordEntry" Placeholder="Enter password" />
            <Button Text="Submit" Clicked="OnSubmitClicked"/>
            <Label x:Name="messageLabel"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>